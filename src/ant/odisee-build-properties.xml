<?xml version="1.0" encoding="UTF-8"?>
<project name="Odisee-build-properties">
    <!--
    
        Odisee.
    
    -->
    <!-- etc -->
    <property name="etc.dir" value="${basedir}/etc"/>
    <!-- Binaries -->
    <property name="bin.dir" value="${basedir}/bin"/>
    <!-- Build -->
    <property name="build.dir" value="${basedir}/build"/>
    <!-- Compiled classes -->
    <property name="classes.dir" value="${build.dir}/classes"/>
    <!-- Libraries -->
    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="libexec.dir" value="${basedir}/libexec"/>
    <!-- Additional Ant libraries -->
    <property name="antlib.dir" value="${lib.dir}/ant"/>
    <!-- Licenses -->
    <property name="license.dir" value="${basedir}/license"/>
    <!-- OOo extension -->
    <property name="extension.dir" value="${src.dir}/extension"/>
    <!-- Distribution w/o platform dependent things -->
    <property name="dist.dir" value="${basedir}/dist"/>
    <!--
    
        Embedded Odisee (library).
    
    -->
    <!-- Sources -->
    <!--
    <property name="java.src.dir" value="${src.basedir}/java"/>
    <property name="java.test.src.dir" value="${basedir}/test/java"/>
    <property name="java.test.report.dir" value="${basedir}/test/report/java"/>
    -->
    <property name="groovy.src.dir" value="${src.dir}/groovy"/>
    <property name="groovy.test.src.dir" value="${basedir}/test/groovy"/>
    <property name="groovy.test.report.dir" value="${basedir}/test/report/groovy"/>
    <!--
    
        Distribution, world: distribution including platform-dependent things.
    
    -->
    <!-- Directory to produce platform independent distribution -->
    <property name="world.base.dir"      value="${build.dir}/world"/>
    <property name="world.etc.dir"       value="${world.base.dir}/etc"/>
    <property name="world.license.dir"   value="${world.base.dir}/license"/>
    <property name="world.bin.dir"       value="${world.base.dir}/bin"/>
    <property name="world.lib.dir"       value="${world.base.dir}/lib"/>
    <property name="world.libexec.dir"   value="${world.base.dir}/libexec"/>
    <property name="world.tomcat.dir"    value="${world.libexec.dir}/tomcat"/>
    <property name="world.src.dir"       value="${world.base.dir}/src"/>
    <property name="world.extension.dir" value="${world.src.dir}/extension"/>
    <property name="world.var.dir"       value="${world.base.dir}/var"/>
    <property name="world.var.tmp.dir"   value="${world.var.dir}/tmp"/>
    <!--
    
        OpenOffice.
    
    -->
    <property name="odisee.openoffice.jar.dir" value="${lib.dir}/openoffice/3.3"/>
    <!--
    
        LibreOffice.
    
    -->
    <property name="odisee.libreoffice.jar.dir" value="${lib.dir}/libreoffice/3.4"/>
    <!--
    
        ODFToolkit.
    
    -->
    <property name="odisee.odftoolkit.jar.dir" value="${lib.dir}/odftoolkit"/>
    <property name="odisee.simpleodf.jar.dir" value="${lib.dir}/simpleodf"/>
    <!--
    
        Apache POI.
    
    -->
    <property name="odisee.apachepoi.jar.dir" value="${lib.dir}/apachepoi"/>
    <!--
    
        Apache PDFbox.
    
    -->
    <property name="odisee.pdfbox.jar.dir" value="${lib.dir}/pdfbox"/>
    <property name="odisee.pdfbox-app.library.jar" value="${odisee.pdfbox.jar.dir}/pdfbox-app-1.6.0.jar"/>
    <!--
    
        Groovy, Grails.
    
    -->
    <property name="local.libexec.dir" value="/Users/rbe/app"/>
    <property name="groovy.version" value="1.8.5"/>
    <property name="grails.version" value="2.0.1"/>
    <property name="groovy.home" value="${local.libexec.dir}/groovy/${groovy.version}"/>
    <property name="grails.home" value="${local.libexec.dir}/grails/${grails.version}"/>
    <!--property name="glue.zip" value="${lib.dir}/glue-1.3.1.zip"/-->
</project>
