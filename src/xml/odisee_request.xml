<odisee>
    <!-- Process result of (all) request(s) -->
    <result>
        <action type="merge" filename=""/>
        <action type="compress" filename=""/>
        <action type="mail" toaddr=""/>
    </result>
    <!--
        If given ID is appended to filename of template, otherwise actual date/time is used
    -->
    <request name="my-request" id="1">
        <!--
            
            The Odisee server group.
            
        -->
        <ooo group="group0"/>
        <!--
             
             Specify template to use.
             Mandatory
             
             name:           its filename w/o extension (.ott).
             revision:       use LATEST or certain revision (number).
             outputFormat:   save in what format? Specify file extension (odt, pdf, doc).
             pre-save-macro: execute macro just before saving file.
             
        -->
        <template name="my-template" revision="LATEST" outputFormat="pdf" pre-save-macro="Library.Module.Name"/>
        <!--
            
            Should we archive the generated document?
            Optional
            
            database: in database as BLOB?
            files:    in filesystem?
            
        -->
        <archive database="false" files="true"/>
        <!--
            
            Instructions.
            Manatory
            
            These instructions are executed in order.
            
        -->
        <instructions>
            <!--
                
                Set value in userfield.
                
                name:       name of userfield, see Ctrl-F2 in OpenOffice.
                post-macro: execute macro after value was set.
                
            -->
            <userfield name="hello">world</userfield>
            <!--
                
                Execute a macro.
                
                name:
                location:
                language:
                parameter:
                
            -->
            <macro name="" location="" language="">
                <parameter value=""/>
                <parameter value=""/>
            </macro>
            <!--
                
                Set cell column width.
                
            -->
            <userfield name="align_Tabelle1"></userfield>
            <!--
                
                Align table.
                
            -->
            <userfield name="align_Tabelle1"></userfield>
            <!--
                
                Insert text at bookmark.
                
                name: name of bookmark.
                post-macro: execute macro after value was set.
                
            -->
            <bookmark name="Bookmark1">Text bei Bookmark1</bookmark>
            <!--
                
                Insert autotext at (bookmark).
                
                name: name of autotext: <name of autotext container>.<name of autotext>
                post-macro: execute macro after value was set
                
            -->
            <autotext name="" bookmark=""/>
            <!--
                
                Insert text in table.
                
                name: name of table and position of cell: tablename!<column><row>, e.g. tablename!A1.
                post-macro: execute macro after value was set.
                
            -->
            <userfield name="Tabelle1!A1" post-macro="">Tabelle 1, A1</userfield>
        </instructions>
    </request>
</odisee>
