pkill soffice

host="127.0.0.1"
LO_HOME=/Applications/LibreOffice.app/Contents
for p in 2001
do
    cd $LO_HOME/program
    ./soffice -env:UserInstallation="file:///$TMPDIR/odisee_port${p}" --accept="socket,host=${host},port=${p};urp;StarOffice.ServiceManager" &
done
