set -o nounset
. ${ODISEE_OS_LIB}/odienv

#
#
#
os_start_ramdisk() {
    # Mount ramdisk
    mkdir -p ${ODISEE_TMP}
    mkdir -p ${ODISEE_BACKUP_RAMDISK}
    sudo mount -t tmpfs -o ${ODISEE_TMP_MOUNT_OPT} tmpfs ${ODISEE_TMP}
}

#
#
#
os_stop_ramdisk() {
    sudo umount ${ODISEE_TMP}
}
