<?xml version="1.0" encoding="utf-8"?>
<Server address="127.0.0.1" port="8005" shutdown="SHUTDOWN">
    <!--
    <Listener className="org.apache.catalina.core.AprLifecycleListener" SSLEngine="off"/>
    <Listener className="org.apache.catalina.core.JasperListener"/>
    -->
    <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener"/>
    <Listener className="org.apache.catalina.core.JreMemoryLeakPreventionListener"/>
    <Listener className="org.apache.catalina.core.ThreadLocalLeakPreventionListener"/>
    <GlobalNamingResources>
        <!-- Tomcat -->
        <Resource name="UserDatabase"
                  auth="Container" type="org.apache.catalina.UserDatabase"
                  factory="org.apache.catalina.users.MemoryUserDatabaseFactory"
                  description="User database that can be updated and saved"
                  pathname="conf/tomcat-users.xml"/>
        <!-- Odisee -->
        <Resource name="OdiseeUserDatabase"
                  auth="Container" type="org.apache.catalina.UserDatabase"
                  factory="org.apache.catalina.users.MemoryUserDatabaseFactory"
                  pathname="../odisee/tomcat-users.xml"/>
    </GlobalNamingResources>
    <Service name="Catalina">
        <!--
        <Connector address="127.0.0.1" port="8009" protocol="AJP/1.3" redirectPort="8443"/>
        -->
        <Connector address="127.0.0.1" port="8080" redirectPort="8443"
                   protocol="org.apache.coyote.http11.Http11NioProtocol"
                   connectionTimeout="5000"
                   keepAliveTimeout="2500" maxKeepAliveRequests="100"
                   maxConnections="1000" maxThreads="10" minSpareThreads="2"
                   acceptCount="100" acceptorThreadCount="4"
                   maxHttpHeaderSize="1024"
                   compression="on"
                   compressableMimeType="text/html,text/xml,text/plain,text/css,text/javascript,text/json,application/json"
                   xpoweredBy="false" server="Odisee Server"/>
        <Engine name="Catalina" defaultHost="localhost">
            <!--
            <Realm className="org.apache.catalina.realm.LockOutRealm">
                <Realm className="org.apache.catalina.realm.UserDatabaseRealm" resourceName="UserDatabase"/>
            </Realm>
            -->
            <Host name="localhost" appBase="webapps" unpackWARs="true" autoDeploy="true">
                <!-- /odisee -->
                <Context path="/odisee" docBase="../odisee/war" debug="0" reloadable="false" crossContext="true">
                    <Realm className="org.apache.catalina.realm.LockOutRealm">
                        <Realm className="org.apache.catalina.realm.UserDatabaseRealm" resourceName="OdiseeUserDatabase"/>
                    </Realm>
                </Context>
                <!--
                <Valve className="org.apache.catalina.valves.AccessLogValve" directory="logs" prefix="localhost_access_log." suffix=".txt" pattern="%h %l %u %t &quot;%r&quot; %s %b"/>
                -->
            </Host>
        </Engine>
    </Service>
</Server>
